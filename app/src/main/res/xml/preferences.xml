<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="SeekBar">
        <SeekBarPreference
            android:key="Music_Volume"
            android:title="musicvolume"
            android:summary="Regulate the volume"
            android:defaultValue="50"
            android:min="0"
            android:max="100"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="Switches and Checkboxes">
    <SwitchPreferenceCompat
        android:key="sound_eff"
        android:title="Sound effects"
        android:summary="Turn on or off sound effects"
        android:defaultValue="true"/>
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>