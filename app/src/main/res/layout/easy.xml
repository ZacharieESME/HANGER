                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="D"
                    android:onClick="onKeyboardButtonClick" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="F"
                    android:onClick="onKeyboardButtonClick" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="G"
