<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        >

        <ImageButton
            android:id="@+id/backbutton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/abc_vector_test" />

        <View
            android:layout_width="290dp"
            android:layout_height="43dp"
            />

        <ImageButton
            android:id="@+id/settings3"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_gravity="end"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/settingsicon"
            app:srcCompat="@drawable/settingsicon" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <LinearLayout
            android:id="@+id/keyboardLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <!-- First row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Q"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="W"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="E"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="R"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="T"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Y"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="U"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="I"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="O"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="P"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

            </LinearLayout>

            <!-- Second row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="S"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="D"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="F"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="G"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="H"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="J"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="K"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="L"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <ImageButton
                    android:id="@+id/buttonDelete"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#F44336"
                    android:onClick="onDeleteButtonClick"
                    app:srcCompat="@drawable/abc_vector_test" />

            </LinearLayout>

            <!-- Third row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Z"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="X"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="V"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="B"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="N"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="M"
                    android:onClick="onKeyboardButtonClick"
                    android:backgroundTint="#F44336"/>

            </LinearLayout>

        </LinearLayout>



        <EditText
            android:id="@+id/displayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="70dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true"
            android:hint="Enter letter here"
            android:maxLength="1"
            android:inputType="none"/>

        <Button
            android:id="@+id/guess2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="500dp"
            android:layout_marginRight="90dp"
            android:text="Guess"
            android:onClick="onGuessClicked"
            android:backgroundTint="#F44336"/>


        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="400dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:textSize="24sp"
            tools:context=".MainActivity">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="480dp"
            android:layout_marginLeft="10dp"
            android:text="Wrong Guesses:"
            android:id="@+id/wrongguesses"
            >

        </TextView>

        <ImageView
            android:id="@+id/hangman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hangmanpart0" />

        <ImageView
            android:id="@+id/youlose"
            android:layout_width="wrap_content"
            android:layout_height="340dp"
            app:srcCompat="@drawable/youlose"
            android:visibility="invisible">

        </ImageView>

        <ImageView
            android:id="@+id/congrat"
            android:layout_width="wrap_content"
            android:layout_height="340dp"
            app:srcCompat="@drawable/congrat"
            android:visibility="invisible">

        </ImageView>



        <Button
            android:id="@+id/tryagain"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="57dp"
            android:text="New Word"
            android:onClick="restartPage"
            android:visibility="invisible">


        </Button>


        <Button
            android:id="@+id/menu3"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="160dp"
            android:layout_marginStart="208dp"
            android:text="Menu"
            android:visibility="invisible">

        </Button>

        <TextView
            android:id="@+id/word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="127dp"
            android:textSize="20dp"
            android:text="">

        </TextView>





    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>